<div class="container px-5 px-sm-0">
    <div class="row">

        <%= render 'user', user_info: @user_info %>

        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <% @book.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id), class: '' do %>
                    <%= image_tag book.user.get_profile_image(100, 100) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id), class: '' do %>
                  <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>